{% extends 'base-email.html.twig' %}

{% block body %}
    <container>
        <row>
            <columns>
                <spacer size="16"></spacer>
                <h1 class="text-center">Vous avez oublié votre mot de passe ?</h1>
                <spacer size="16"></spacer>
                <p class="text-center">Pour réinitialiser votre mot de passe, veuillez consulter le lien suivant</p>
                <button class="large expand main-btn" href="{{ url('app_reset_password', {token: resetToken.token}) }}">
                    Réinitialiser le mot de passe
                </button>
                <p class="text-center">Ce lien expirera dans
                    {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                    .
                </p>
            </columns>
        </row>
    </container>
{% endblock %}
