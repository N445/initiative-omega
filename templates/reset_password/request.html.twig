{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-end">
            <div class="col-md-10">
                <div class="container my-5">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="card text-bg-dark">
                                <div class="card-body">
                                    <h1>Réinitialiser votre mot de passe</h1>
                                    {{ form_start(requestForm) }}
                                    {{ form_row(requestForm.email) }}
                                    <p>
                                        <small>
                                            Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                        </small>
                                    </p>

                                    <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
                                    {{ form_end(requestForm) }}
                                    <div class="d-flex justify-content-between mt-3">
                                        <a href="{{ path('app_login') }}">
                                            Connexion
                                        </a>
                                        <a href="{{ path('app_register') }}">
                                            Inscription
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
